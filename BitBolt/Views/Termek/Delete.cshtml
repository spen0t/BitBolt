@model BitBolt.Models.Termekek

@{
    ViewData["Title"] = "Törlés";
}


<h2>Biztos törlöd az terméket a listából?</h2>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Megnevezés:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Megnevezés)
        </dd>
        <dt class = "col-sm-2">
            Gyártó:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Gyáró)
        </dd>
        <dt class = "col-sm-2">
            Típus:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Típus)
        </dd>
        <dt class = "col-sm-2">
            Beszerzési ár:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BeszerzésiÁr)
        </dd>
    </dl>
    <div class="mt-2"/>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Törlés" class="btn btn-danger" />
    </form>
    <div class="mt-2"/>
    <div>
    <a class="link-dark" asp-action="Index">Vissza</a>
</div>
</div>
