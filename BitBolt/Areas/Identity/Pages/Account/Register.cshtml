@page
@model RegisterModel
@{
    ViewData["Title"] = "Regisztráció";
}

<div class="text-center">
<h2>Regisztráció</h2>
</div>

<div class="row">
    <div class="row d-flex justify-content-center">
    <div class="col-md-5">
        
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mt-4"></div>
            <div class="form-floating">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email">Emailcím</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="mt-4"></div>
            <div class="form-floating">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.Password">Jelszó</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="mt-4"></div>
            <div class="form-floating">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.ConfirmPassword">Jelszó újra</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="mt-4"></div>
            <button id="confirm-link" href="@Model.EmailConfirmationUrl" type="submit" class="w-100 btn btn-lg btn-dark">Regisztrálok</button>
        </form>
    </div>
   </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
