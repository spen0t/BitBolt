@page
@model LoginModel

@{
    ViewData["Title"] = "Bejelentkezés";
}

<div class="text-center">
<h2>@ViewData["Title"]</h2>
</div>

<div class="row">
    <div class="row d-flex justify-content-center">
    <div class="col-md-5">
        <section>
            <form id="account" method="post">
                <hr />
                
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                    <label asp-for="Input.Email" class="form-label">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                    <label asp-for="Input.Password" class="form-label">Jelszó</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-dark">Bejelentkezés</button>
                </div>
                <div>
                    <p>
                        <div class="text-center">
                        <a class="link-dark" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Még nincs fiókom, regisztrálok.</a>
                        </div>
                    </p>
                </div>
            </form>
        </section>
    </div>
   </div> 
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
